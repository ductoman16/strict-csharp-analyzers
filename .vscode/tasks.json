{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ğŸ“¦ dotnet build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"/warnaserror"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "ğŸ‘€ ğŸ§ª dotnet watch test",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"test",
				"--project",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--",
				"--project",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--maxcpucount:1"
			],
			"problemMatcher": "$msCompile",
			"group": "test"
		},
		{
			"label": "ğŸ§ª dotnet test",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--blame-hang-timeout",
				"30s",
				"--maxcpucount:1"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "ğŸŒ dotnet test (Integration Only)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--filter",
				"Category=Integration",
				"--blame-hang-timeout",
				"30s"
			],
			"problemMatcher": "$msCompile",
			"group": "test"
		},
		{
			"label": "ğŸ§¬ dotnet test (Unit Tests Only)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--filter",
				"Category!=Integration",
				"--blame-hang-timeout",
				"30s"
			],
			"problemMatcher": "$msCompile",
			"group": "test"
		},
		{
			"label": "ğŸ¯ dotnet test (Current File)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx",
				"--filter",
				"FullyQualifiedName~${fileBasenameNoExtension}",
				"--blame-hang-timeout",
				"30s",
				"--maxcpucount:1"
			],
			"problemMatcher": "$msCompile",
			"group": "test"
		},
		{
			"label": "ğŸ«§ dotnet clean",
			"command": "dotnet",
			"type": "process",
			"args": [
				"clean",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "ğŸ’… dotnet format",
			"command": "dotnet",
			"type": "process",
			"args": [
				"format",
				"${workspaceFolder}/StrictCSharp.Analyzers.slnx"
			],
			"problemMatcher": "$msCompile",
			"group": "none"
		},
		{
			"label": "ğŸ“Š Test Coverage",
			"type": "shell",
			"command": "dotnet test ${workspaceFolder}/StrictCSharp.Analyzers.slnx --collect:\"XPlat Code Coverage\" --results-directory ${workspaceFolder}/TestResults && ~/.dotnet/tools/reportgenerator \"-reports:${workspaceFolder}/TestResults/**/coverage.cobertura.xml\" -targetdir:${workspaceFolder}/TestResults/CoverageReport -reporttypes:Html && open ${workspaceFolder}/TestResults/CoverageReport/index.html",
			"problemMatcher": "$msCompile",
			"group": "test"
		},
		{
			"label": "ğŸ‘¾ Stryker Mutation Testing",
			"type": "shell",
			"command": "cd ${workspaceFolder}/StrictCSharp.Analyzers.Tests && dotnet stryker && open StrykerOutput/*/reports/mutation-report.html",
			"problemMatcher": [],
			"group": "test"
		}
	]
}